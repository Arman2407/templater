<h1>Bank Accounts</h1>

<table class="table table-striped">
  <thead class="thead-dark">
    <tr>
      <th>Accountable</th>
      <th>Active</th>
      <th>Bank name</th>
      <th>Bank bik</th>
      <th>Kor account</th>
      <th>Account</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @bank_accounts.each do |bank_account| %>
      <tr>
        <td><%= bank_account.accountable %></td>
        <td><%= bank_account.active %></td>
        <td><%= bank_account.bank_name %></td>
        <td><%= bank_account.account_num %></td>
        <td><%= link_to 'Show', polymorphic_path([@accountable, bank_account]) %></td>
        <td><%= link_to 'Edit', edit_polymorphic_path([@accountable, bank_account]) %></td>
        <td><%= link_to 'Destroy', polymorphic_path([@accountable, bank_account]), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Bank Account', new_polymorphic_path([@accountable, BankAccount]), class: 'btn btn-primary' %>
