<h1>Contracts</h1>

<table class="table table-striped">
  <thead class="thead-dark">
    <tr>
      <th>Document name</th>
      <th>Customer</th>
      <th>Executor</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @contracts.each do |contract| %>
      <tr>
        <td><%= contract.document_name %></td>
        <td><%= contract.customer %></td>
        <td><%= contract.executor %></td>
        <td><%= link_to 'Show', contract %></td>
        <td><%= link_to 'Edit', edit_contract_path(contract) %></td>
        <td><%= link_to 'Destroy', contract, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Contract', new_contract_path, class: 'btn btn-primary' %>
