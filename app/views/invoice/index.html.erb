<h1>Invoices</h1>

<table class="table table-striped">
  <thead class="thead-dark">
    <tr>
      <th>Serial number</th>
      <th>Discharge date</th>
      <th>Adress</th>
      <th>Price</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @invoices.each do |invoice| %>
      <tr>
        <td><%= invoice.serial_number %></td>
        <td><%= invoice.discharge_date %></td>
        <td><%= invoice.adress %></td>
        <td><%= invoice.price %></td>
        <td><%= link_to 'Show', invoice %></td>
        <td><%= link_to 'Edit', edit_invoice_path(invoice) %></td>
        <td><%= link_to 'Destroy', invoice, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Invoice', new_invoice_path, class: 'btn btn-primary' %>
