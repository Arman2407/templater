
<%= simple_form_for(@counterparty) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-inputs">
    <%= f.input :company_full_name %>
    <%= f.input :company_short_name %>
    <%= f.input :signatory_person %>
    <%= f.input :signatory_person_genitive %>
    <%= f.input :signatory_basis %>
    <%= f.input :signatory_basis_genitive %>
    <%= f.input :inn %>
    <%= f.input :kpp %>
    <%= f.input :ogrn %>
    <%= f.input :legal_address %>
    <%= f.input :real_address %>
    <%= f.input :post_address %>
    <%= f.input :phone %>
    <%= f.input :email %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, class: 'btn btn-primary' %>
  </div>
<% end %>
