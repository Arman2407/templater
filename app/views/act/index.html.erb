<h1>Acts</h1>

<table class="table table-striped">
  <thead class="thead-dark">
    <tr>
      <th>Document name</th>
      <th>Serial number</th>
      <th>Adress</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @acts.each do |act| %>
      <tr>
        <td><%= contract.document_name %></td>
        <td><%= contract.serial_number %></td>
        <td><%= contract.adress %></td>
        <td><%= link_to 'Show', act %></td>
        <td><%= link_to 'Edit', edit_act_path(act) %></td>
        <td><%= link_to 'Destroy', act, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Act', new_act_path, class: 'btn btn-primary' %>
